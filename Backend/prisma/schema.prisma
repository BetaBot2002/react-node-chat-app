// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model chats {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  chatName    String
  isGroupChat Boolean
}

model users {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  password String
  isAdmin  Boolean
}

model messages{
  id       String  @id @default(auto()) @map("_id") @db.ObjectId

}
